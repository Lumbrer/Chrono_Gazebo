CMAKE_MINIMUM_REQUIRED(VERSION 2.8)

find_package(gazebo REQUIRED)

SET(CMAKE_MODULE_PATH ${CMAKE_MODULE_PATH} "${CMAKE_SOURCE_DIR}/cmake/")

FIND_PACKAGE(ChronoEngine COMPONENTS unit_VEHICLE)
# FIND_PACKAGE(ChronoVehicle )

message(STATUS "CHRONOVEHICLE_INCLUDES ${CHRONOENGINE_INCLUDES}")
INCLUDE_DIRECTORIES(SYSTEM ${CHRONOENGINE_INCLUDES} ${GAZEBO_INCLUDE_DIRS}) # "${CHRONOENGINE_INCLUDES}/unit_VEHICLE")

link_directories(${GAZEBO_LIBRARY_DIRS})
set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} ${GAZEBO_CXX_FLAGS}")


add_library(gazonoVehicle SHARED gazonoVehicle.cc)

TARGET_LINK_LIBRARIES(gazonoVehicle ${CHRONOENGINE_LIBRARIES} ${GAZEBO_LIBRARIES}) # ${CHRONOVEHICLE_LIBRARIES})

CHRONOENGINE_COPY_PROJECT_DATA_DIR()

# CHRONOENGINE_ENABLE_CHRONODLLCOPY()
